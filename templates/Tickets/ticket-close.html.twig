{% extends 'base.html.twig' %}

{% block title %}Ticket clothing{% endblock %}

{% block body %}
    <div class="container">
      <div id="close-form">
        <header align="center">
          <h3>Are you sure want to close ticket #{{ ticket.id }}: "{{ ticket.theme }}"?</h3>
        </header>
        <form class="form-horizontal" method="post" name="close_form">
          <div align="center">
            <button type="submit" class="btn btn-default" name="buttonSubmit">Yes</button>
            <button type="submit" class="btn btn-default" name="buttonCancel">Cancel</button>
          </div>
        </form>
      </div>
    </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
{% endblock %}
