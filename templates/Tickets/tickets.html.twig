{% extends 'base.html.twig' %}

{% block title %}Tickets{% endblock %}

{% block body %}
  <div class="container">
  <h2>Tickets</h2>                                                      
  <div class="table-responsive">          
  <table class="table">
    <thead>
      <tr>
        <th>Ticket ID</th>
        <th>Theme</th>
        <th>Status</th>
        <th>Last message from</th>
        <th>Last updated</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {% for ticket in customer.tickets %}
      <tr>
        <td><a href="{{ routes.ticket_info }}{{ ticket.id }}">{{ ticket.id }}</a></td>
        <td>{{ ticket.theme }}</td>
        <td>{{ ticket.status }}</td>
        <td>{{ ticket.lastWriter }}</td>
        <td>{{ ticket.timeUpdated }}</td>   
        <td><a href="{{ routes.ticket_close }}{{ ticket.id }}">Close</a></td>      
      </tr>
      {% endfor %}
    </tbody>
  </table>
  <a href="{{ routes.ticket_add }}">Create new ticket</a>
  </div>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
{% endblock %}
