{% extends 'base.html.twig' %}

{% block title %}Password recovery{% endblock %}

{% block body %}
    <div class="container">
      <div id="registration-form">
        <header align="center">
          <h1>Enter new password</h1>
        </header>
        <form class="form-horizontal" method="post" name="registration_form">
          <div class="form-group {{ customer.hasError('password') ? 'has-error' : '' }}">
            <label for="inputPassword" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="customer[password]" maxlenght="60">
              {% if customer.hasError('password') %}
                <span id="helpBlock" class="help-block">{{ customer.errorString('password') }}</span>
              {% endif %}
            </div>
          </div>
          <div class="form-group {{ customer.hasError('password_confirm') ? 'has-error' : '' }}">
            <label for="inputConfirmPassword" class="col-sm-2 control-label">Confirm Password</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="inputConfirmPassword" placeholder="Confirm Password" name="customer[password_confirm]" maxlenght="60">
              {% if customer.hasError('password_confirm') %}
                <span id="helpBlock" class="help-block">{{ customer.errorString('password_confirm') }}</span>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
              Don't need to change password any more? Go to the <a href="{{ url }}">login page </a>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default" name="buttonSubmit">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
{% endblock %}
