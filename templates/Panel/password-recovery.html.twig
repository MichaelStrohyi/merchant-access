{% extends 'base.html.twig' %}

{% block title %}Password recovery{% endblock %}

{% block body %}
    <div class="container">
      <div id="recovery-form">
        <header align="center">
          <h1>Password recovery</h1>
        </header>
        <form class="form-horizontal" method="post" name="recovery_form">
          <div class="form-group {{ error is not empty ? 'has-error' : '' }}">
            <label for="inputEmail" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
              <input type="email" class="form-control" id="inputEmail" placeholder="Email" name="login[email]" maxlenght="60" value="{{ email }}">
              {% if error is not empty %}
                <span id="helpBlock" class="help-block">{{ error.string }}</span>
              {% endif %}
              {% if error.url is not empty %}
                <a href="{{ error.url|raw }}">Click here</a> to get new validation link
              {% endif %}
            </div>
          </div> 
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default" name="buttonSubmit">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
{% endblock %}
