{% extends 'base.html.twig' %}

{% block title %}Store removing{% endblock %}

{% block body %}
    <div class="container">
      <div id="registration-form">
        <header align="center">
          <h3>Are you sure want to remove store {{ store.name }} from list of your stores?</h3>
        </header>
        <form class="form-horizontal" method="post" name="registration_form">
          <div align="center">
            <button type="submit" class="btn btn-default" name="buttonSubmit">Delete</button>
            <button type="submit" class="btn btn-default" name="buttonCancel">Cancel</button>
          </div>
        </form>
      </div>
    </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
{% endblock %}
